# ============================================
# Обязательные переменные окружения
# ============================================

# Telegram Bot Token (получить у @BotFather)
TG_BOT_TOKEN=your_telegram_bot_token_here

# Robokassa настройки платежей
# Получить в личном кабинете Robokassa: https://auth.robokassa.ru/Merchant/WebService/Service.asmx
ROBOKASSA_MERCHANT_LOGIN=your_merchant_login
ROBOKASSA_PASSWORD1=your_password1  # Пароль #1 для формирования подписи платежа
ROBOKASSA_PASSWORD2=your_password2  # Пароль #2 для проверки подписи уведомлений
# Опционально, по умолчанию используется https://auth.robokassa.ru/Merchant/Index.aspx
# ROBOKASSA_API_BASE_URL=https://auth.robokassa.ru/Merchant/Index.aspx
# ROBOKASSA_TEST_MODE=true  # Установите в true для тестового режима

# Базовый URL приложения (используется для webhook'ов и редиректов)
# Для локальной разработки: http://localhost:3000
# Для продакшена: https://your-domain.com
APP_BASE_URL=https://your-domain.com

# База данных
# Для локальной разработки с PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/mvp_db
# Для продакшена (пример для Vercel/Railway/Render):
# DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require
DATABASE_URL=postgresql://user:password@localhost:5432/mvp_db

# Секретный ключ для admin endpoints
# Используется в заголовке x-admin-key для доступа к /api/admin/*
ADMIN_KEY=your_secret_admin_key_here

# ============================================
# Опциональные переменные
# ============================================

# Fulfillment провайдер: mock (для разработки) или digiflazz (для продакшена)
FULFILLMENT_PROVIDER=mock

# Digiflazz настройки (только если FULFILLMENT_PROVIDER=digiflazz)
# DIGIFLAZZ_API_KEY=your_digiflazz_api_key
# DIGIFLAZZ_USERNAME=your_digiflazz_username
# DIGIFLAZZ_BASE_URL=https://api.digiflazz.com/v1

# Username бота поддержки (опционально, по умолчанию "support")
# NEXT_PUBLIC_SUPPORT_BOT_USERNAME=support

# ============================================
# Примечания
# ============================================
# 
# 1. Скопируйте этот файл в .env и заполните реальными значениями
# 2. НЕ коммитьте .env файл в git (он уже в .gitignore)
# 3. Для продакшена настройте переменные окружения на хостинге
# 4. DATABASE_URL должен быть PostgreSQL для продакшена
# 5. APP_BASE_URL должен быть HTTPS URL для продакшена

