// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Provider {
  MANUAL
  DIGIFLAZZ
  AUTOMATED
}

enum OrderStatus {
  PENDING
  PAID
  FULFILLED
  CANCELED
  REFUNDED
}

enum ReferralRewardStatus {
  LOCKED
  AVAILABLE
  PAID
  CANCELED
}

enum ReferralRewardType {
  FIRST_ORDER
  SUBSEQUENT_ORDER
}

enum WithdrawalAsset {
  TON        // Legacy, only for reading old records
  USDT_TON   // Only allowed for new requests
}

enum WithdrawalStatus {
  PENDING
  APPROVED
  PAID
  REJECTED
}

model Product {
  id          String   @id @default(uuid())
  sku         String   @unique
  title       String
  description String?
  priceRub    Int      @map("price_rub")
  category    String?
  provider    Provider @default(MANUAL)
  isActive    Boolean  @default(true) @map("is_active")
  imageUrl    String?  @map("image_url")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([isActive, category])
  @@index([sku])
  @@map("products")
}

model User {
  id           String    @id @default(cuid())
  tgId         String    @unique @map("tg_id")
  referralCode String    @unique @map("referral_code")
  referredById String?   @map("referred_by_id")
  referredAt   DateTime? @map("referred_at")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  referredBy User?  @relation("UserReferrals", fields: [referredById], references: [id])
  referrals  User[] @relation("UserReferrals")

  orders          Order[]           @relation("UserOrders")
  inviterRewards  ReferralEvent[]   @relation("InviterRewards")
  refereeRewards  ReferralEvent[]   @relation("RefereeRewards")
  withdrawalRequests WithdrawalRequest[] @relation("UserWithdrawals")

  @@index([tgId])
  @@index([referralCode])
  @@index([referredById])
  @@map("users")
}

model Order {
  id            String      @id @default(uuid())
  userId        String      @map("user_id")
  totalAmount   Int         @map("total_amount")
  discountAmount Int        @default(0) @map("discount_amount")
  status        OrderStatus @default(PENDING)
  paidAt        DateTime?   @map("paid_at")
  fulfilledAt   DateTime?  @map("fulfilled_at")
  refundedAt    DateTime?  @map("refunded_at")
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")

  user          User            @relation("UserOrders", fields: [userId], references: [id])
  referralEvents ReferralEvent[]

  @@index([userId])
  @@index([status])
  @@index([paidAt])
  @@map("orders")
}

model ReferralEvent {
  id                String              @id @default(uuid())
  orderId           String              @map("order_id")
  inviterId         String              @map("inviter_id")
  refereeId         String              @map("referee_id")
  percentage        Int
  amount            Int
  rewardType        ReferralRewardType  @map("reward_type")
  status            ReferralRewardStatus @default(LOCKED)
  lockedUntil       DateTime?           @map("locked_until")
  withdrawalRequestId String?            @map("withdrawal_request_id")
  createdAt         DateTime            @default(now()) @map("created_at")
  paidOutAt         DateTime?           @map("paid_out_at")
  canceledAt        DateTime?            @map("canceled_at")

  order             Order @relation(fields: [orderId], references: [id])
  inviter           User  @relation("InviterRewards", fields: [inviterId], references: [id])
  referee           User  @relation("RefereeRewards", fields: [refereeId], references: [id])
  withdrawalRequest WithdrawalRequest? @relation(fields: [withdrawalRequestId], references: [id])

  @@unique([orderId, inviterId, rewardType])
  @@index([inviterId, status])
  @@index([lockedUntil])
  @@index([withdrawalRequestId])
  @@index([inviterId, status, withdrawalRequestId])
  @@map("referral_events")
}

model WithdrawalRequest {
  id          String            @id @default(uuid())
  userId      String            @map("user_id")
  username    String?
  amountRub   Int               @map("amount_rub")
  asset       WithdrawalAsset   @map("asset")
  tonAddress  String            @map("ton_address")
  status      WithdrawalStatus  @default(PENDING)
  adminNote   String?           @map("admin_note")
  txHash      String?           @map("tx_hash")
  paidAt      DateTime?         @map("paid_at")
  createdAt   DateTime          @default(now()) @map("created_at")
  updatedAt   DateTime          @updatedAt @map("updated_at")

  user            User            @relation("UserWithdrawals", fields: [userId], references: [id])
  referralEvents  ReferralEvent[]

  @@index([userId, status])
  @@index([status])
  @@map("withdrawal_requests")
}
